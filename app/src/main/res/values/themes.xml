<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme - Material Design 3 -->
    <style name="Theme.SmartLearn" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.SmartLearn.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.SmartLearn</item>
    </style>
</resources>
